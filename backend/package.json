{
  "name": "sokol-backend",
  "version": "1.0.0",
  "description": "Sokol Learning Platform - AI-Powered Adaptive Learning Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node seeders/runSeeders.js",
    "seed:dev": "NODE_ENV=development node seeders/runSeeders.js",
    "seed:comprehensive": "NODE_ENV=development node seeders/comprehensiveSeeder.js",
    "seed:prod": "NODE_ENV=production node seeders/comprehensiveSeeder.js",
    "analytics:process": "node jobs/analyticsProcessor.js",
    "db:clear": "node scripts/clearDatabase.js",
    "db:backup": "node scripts/backupDatabase.js",
    "db:restore": "node scripts/restoreDatabase.js",
    "db:setup": "node scripts/setup-database.js",
    "db:setup:clean": "node scripts/setup-database.js --drop-indexes",
    "db:setup:stats": "node scripts/setup-database.js --stats",
    "db:setup:preview": "node scripts/setup-database.js --dry-run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "check": "npm run lint && npm run test",
    "build": "node -e \"console.log('âœ… Backend build complete. No compilation needed.');\"",
    "docker:build": "docker build -t sokol-backend .",
    "docker:run": "docker run -p 3000:3000 sokol-backend",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup:dev": "npm install && npm run docker:dev && sleep 10 && npm run seed:comprehensive",
    "setup:quick": "npm install && npm run seed:comprehensive && npm run dev"
  },
  "keywords": [
    "learning",
    "education",
    "ai",
    "adaptive-learning",
    "personalization",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Sokol Learning Team",
  "license": "MIT",
  "dependencies": {
    "@clerk/express": "^1.7.23",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "openai": "^4.20.1",
    "pdf-lib": "^1.17.1",
    "svix": "^1.73.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
