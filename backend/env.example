# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# OpenAI Configuration (if using AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_ASSESSMENT=gpt-4o
OPENAI_MAX_TOKENS_ASSESSMENT=4000
OPENAI_TEMP_ASSESSMENT=0.5
OPENAI_MODEL_EVALUATION=gpt-4o
OPENAI_MODEL_CONVERSATION=gpt-4o-mini
OPENAI_MAX_TOKENS_CONVERSATION=500
OPENAI_MODEL_ANALYSIS=gpt-4o-mini

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security
HELMET_CONTENT_SECURITY_POLICY=false
SESSION_SECRET=your_session_secret_here

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
